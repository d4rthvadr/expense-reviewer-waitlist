---
import FAQItem from './FAQItem.astro';
import type { FAQItem as FAQItemType } from '../../data/faq';

export interface Props {
  items: FAQItemType[];
}

const { items } = Astro.props;
---

<div class="faq-list">
  {items.map((item) => (
    <FAQItem question={item.question} answer={item.answer} />
  ))}
</div>

<style>
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
