---
// Device mockups container for hero section
import PhonePreview from './PhonePreview.astro';
import TabletPreview from './TabletPreview.astro';
---

<div class="device-mockups">
	<div class="phone-container">
		<PhonePreview />
	</div>
	<div class="tablet-container">
		<TabletPreview />
	</div>
</div>

<style>
	.device-mockups {
		position: relative;
		width: 100%;
		height: 500px;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.phone-container {
		position: relative;
		z-index: 3;
	}

	.tablet-container {
		position: absolute;
		top: 50%;
		left: -150px;
		transform: translateY(-50%);
		z-index: 2;
	}

	/* Responsive adjustments */
	@media (max-width: 1200px) {
		.tablet-container {
			left: -100px;
		}
	}

	@media (max-width: 1024px) {
		.tablet-container {
			left: -50px;
		}
	}

	@media (max-width: 768px) {
		.device-mockups {
			height: 320px;
			overflow: hidden;
			position: relative;
		}

		.tablet-container {
			position: absolute;
			top: 0;
			left: 50%;
			transform: translateX(-50%) scale(0.65);
			z-index: 1;
			opacity: 0.8;
		}

		.phone-container {
			position: absolute;
			top: 0;
			left: 50%;
			transform: translateX(-50%);
			z-index: 3;
		}

		/* Add fade-out effect at bottom */
		.device-mockups::after {
			content: '';
			position: absolute;
			bottom: 0;
			left: 0;
			right: 0;
			height: 80px;
			background: linear-gradient(transparent, #f8fafc);
			pointer-events: none;
			z-index: 5;
		}
	}

	@media (max-width: 576px) {
		.device-mockups {
			height: 280px;
		}

		.tablet-container {
			top: 0;
			transform: translateX(-50%) scale(0.55);
			opacity: 0.7;
		}

		.phone-container {
			top: 0;
		}

		.device-mockups::after {
			height: 90px;
		}
	}

	@media (max-width: 480px) {
		.device-mockups {
			height: 240px;
		}

		.tablet-container {
			top: 0;
			transform: translateX(-50%) scale(0.45);
			opacity: 0.6;
		}

		.phone-container {
			top: 0;
		}

		.device-mockups::after {
			height: 100px;
		}
	}
</style>
