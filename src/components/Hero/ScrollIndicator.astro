<div class="scroll-indicator" data-scroll-to="faq">
  <div class="scroll-dot"></div>
  <div class="scroll-line"></div>
  <span class="scroll-text">Scroll for FAQ</span>
</div>

<style>
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: #666;
    font-size: 0.9rem;
    z-index: 10;
    animation: bounce 2s infinite;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .scroll-indicator:hover {
    transform: translateX(-50%) scale(1.1);
    color: #6366f1;
  }

  .scroll-dot {
    width: 8px;
    height: 8px;
    background: #6366f1;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .scroll-line {
    width: 2px;
    height: 30px;
    background: linear-gradient(to bottom, #6366f1, transparent);
    border-radius: 1px;
  }

  .scroll-text {
    font-weight: 500;
    color: #666;
    white-space: nowrap;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-5px);
    }
    60% {
      transform: translateX(-50%) translateY(-3px);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.2);
    }
  }

  @media (max-width: 768px) {
    .scroll-indicator {
      bottom: 1rem;
    }
  }
</style>
